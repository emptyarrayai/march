{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "march-tauri",
  "version": "0.1.0",
  "identifier": "com.march-tauri.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "withGlobalTauri": true,
		"windows": [
			{
        "label": "main",
				"url": "/today",
				"width": 1200,
				"height": 800,
				"title": "march",
				"titleBarStyle": "Overlay",
				"hiddenTitle": true
			},
      {
        "label": "tray",
				"url": "/tray",
				"width": 400,
				"height": 600,
				"title": "march",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "resizable": false,
        "visible": false,
        "focus": false
			}
		],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
