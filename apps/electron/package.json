{
  "name": "@satellite/electron",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "march-dev",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "bunx prettier --write .",
    "lint": "bunx eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "bunx --bun tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "bunx --bun tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "bun run typecheck:node && bun run typecheck:web",
    "start": "bunx --bun electron-vite preview",
    "dev": "bunx --bun electron-vite dev",
    "build": "bun run typecheck && bunx --bun electron-vite build",
    "postinstall": "bunx electron-builder install-app-deps",
    "build:unpack": "bun run build && bunx electron-builder --dir",
    "build:win": "bun run build && bunx electron-builder --win",
    "build:mac": "bun run build && bunx electron-builder --mac",
    "build:linux": "bun run build && bunx electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "electron": "^31.0.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
